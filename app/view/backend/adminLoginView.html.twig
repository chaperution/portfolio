{% extends "backend/layout.html.twig" %}

{% block backend_body %}

	<section id="adminLoginFrame">
		<div class="row">
			<div class="col-lg-12" style="text-align: center;">
				<h3>Se connecter au panneau d'administration</h3>
					{% if get.accountStatus and get.accountStatus == 'unsuccess-login' %}
						<p id="error">Mauvais identifiant ou mot de passe !</p>
					{% endif %}
				<div class="formBlock">
					<form action="index.php?action=adminLogin" method="post">
						<div class="form-group">
							<label for="pass">Entrez le mot de passe :</label>
							<input type="password" class="form-control form-control-lg" name="pass" id="pass" required />
						</div>
						<button type="submit" class="btn btn-primary btn-lg">Se connecter</button>
					</form>
				</div>
			</div>
		</div>
	</section>

{% endblock %}