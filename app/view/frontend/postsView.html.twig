{% extends "frontend/layout.html.twig" %}

{% block frontend_body %}

	<section class="framePost">
		<div class="post">
			<div class="row" style="justify-content: space-around">
				{% if posts is defined %}
					{% for post in posts %}
				<div class="col-lg-4 col-sm-6" >
					<figure class="projets">
						<img src="public/img/upload/{{ post.post_image }}" alt="" /><br />
						<figcaption>
							<h3>
								{{ post.title }}
							</h3>
							<!-- button découvrir le projet -->
							<a href="index.php?action=post&amp;id={{ post.id }}" role="button" class="btn btn-primary btn-lg active" aria-pressed="true">Découvrir</a>
						</figcaption>
					</figure>
				</div>
					{% endfor %}
			</div>
				{% else %}
			<div class="row">
				<div class="col-lg-12">
					<p>Pas de projets à afficher !</p>
				</div>
			</div>
				{% endif %}
		</div>
	</section>

{% endblock %}