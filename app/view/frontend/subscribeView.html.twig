{% extends "frontend/layout.html.twig" %}

{% block frontend_body %}

	<section id="subscribeFrame">
		<div class="row" style="justify-content: center">
			<div class="col-lg-4">
				<div class="formBlock">
					<form action="index.php?action=addMember" method="post">
						<div class="form-group">
							<label for="pseudo">Pseudo</label><br />
							<input type="text" class="form-control form-control-lg" name="pseudo" id="pseudo" required /><br />
						</div>
						<div class="form-group">
							<label for="pass">Mot de passe</label><br />
							<input type="password" class="form-control form-control-lg" name="pass" id="pass" aria-describedby="passFormat" required /><br />
							<small id="passFormat" class="form-text text-muted">Votre mot de passe doit contenir au moins 8 caractères dont au moins 1 chiffre.</small>
						</div>
						<div class="form-group">
							<label for="pass_confirm">Retapez votre mot de passe</label><br />
							<input type="password" class="form-control form-control-lg" name="pass_confirm" id="pass_confirm" required /><br />
						</div>
						<div class="form-group">
							<label for="mail">Adresse email</label><br />
							<input type="email" class="form-control form-control-lg" name="mail" id="mail" aria-describedby="emailHelp" required /><br />
							<small id="emailHelp" class="form-text text-muted">Votre adresse email ne sera pas utilisée en dehors de ce site.</small>
						</div>
						<button type="submit" class="btn btn-primary btn-lg">S'inscrire</button>
					</form>
				</div>
			</div>
		</div>
	</section>

{% endblock %}